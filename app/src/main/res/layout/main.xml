<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151B3B"
    android:padding="20dp">


    <RelativeLayout
        android:id="@+id/start_time_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#1F1F4B">

        <TextView
            android:id="@+id/title_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="开启时间"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>



        <TextView
            android:id="@+id/start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_start_time"
            android:layout_alignBottom="@+id/title_start_time"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/start_time_btn"
            android:text="18:00"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/start_time_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@android:drawable/ic_menu_more"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/start_time_layout"
        android:layout_marginTop="25dp"
        android:background="#1F1F4B"
        android:id="@+id/stop_time_layout">

        <TextView
            android:id="@+id/title_stop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="关闭时间"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stop_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_stop_time"
            android:layout_alignBottom="@+id/title_stop_time"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/stop_time_btn"
            android:text="22:00"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/stop_time_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_menu_more"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stop_time_layout"
        android:layout_marginTop="25dp"
        android:background="#1F1F4B"
        android:id="@+id/temperature_layout">

        <TextView
            android:id="@+id/title_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="温度"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_temperature"
            android:layout_alignBottom="@+id/title_temperature"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/temperature_btn"
            android:text="22"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/temperature_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_menu_more"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/temperature_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#1F1F4B"
        android:id="@+id/mode_layout">

        <TextView
            android:id="@+id/title_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="模式"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_mode"
            android:layout_alignBottom="@+id/title_mode"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/mode_btn"
            android:text="制冷"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mode_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@android:drawable/ic_menu_more" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mode_layout"
        android:layout_marginTop="25dp"
        android:background="#1F1F4B"
        android:id="@+id/speed_layout">

        <TextView
            android:id="@+id/title_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="风速"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/speed_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_speed"
            android:layout_alignBottom="@+id/title_speed"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/speed_btn"
            android:text="三级"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/speed_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_menu_more"
            android:layout_marginEnd="10dp"
             />
    </RelativeLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:background="@android:drawable/btn_radio"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="保存"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/speed_layout"
        android:layout_alignTop="@+id/save"
        android:layout_marginEnd="46dp"
        android:background="@android:drawable/btn_radio"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="取消"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:id="@+id/repeat_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/speed_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#1F1F4B">

        <TextView
            android:id="@+id/title_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="重复"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/repeat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/repeat_btn"
            android:layout_alignBottom="@+id/repeat_btn"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/repeat_btn"
            android:text="每天"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/repeat_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@android:drawable/ic_menu_more" />
    </RelativeLayout>

</RelativeLayout>
